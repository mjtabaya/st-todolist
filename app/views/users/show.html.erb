<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <aside class="col-md-4">
    <%= render 'shared/list_form' if @user==current_user%>
    <ul class="lists">
      <%= render @lists if !@lists.nil? %>
    </ul>
  </aside>
</div>
